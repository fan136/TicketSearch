<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventFragment">

    <LinearLayout
        android:id="@+id/progress_bar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="visible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/line_artist"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="20dp"
                android:paddingBottom="13dp"
                android:text="Artist/Team(s)"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_artist"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">


            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Venue"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_venue"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Time"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_time"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Category"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_cat"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Price Range"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_price"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Ticket Status"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_ticket"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Buy Ticket At"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_buy"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:linksClickable="true"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:text="Seat Map"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_event_seat"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:linksClickable="true"
                android:paddingLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>